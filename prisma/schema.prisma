generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int                            @id @default(autoincrement())
  email                String                         @unique
  name                 String?
  profileImage         String?
  supabaseId           String                         @unique
  isProfileComplete    Boolean                        @default(false)
  createdAt            DateTime                       @default(now())
  updatedAt            DateTime                       @updatedAt
  brandName            String?
  senderName           String?
  smtpHost             String?
  smtpPassword         String?
  smtpPort             Int?
  smtpSecure           Boolean?                       @default(false)
  smtpUser             String?
  emailProvider        String?                        @default("mailplug")
  gmailSenderName      String?
  gmailSmtpHost        String?                        @default("smtp.gmail.com")
  gmailSmtpPassword    String?
  gmailSmtpPort        Int?                           @default(587)
  gmailSmtpUser        String?
  mailplugSenderName   String?
  mailplugSmtpHost     String?                        @default("smtp.mailplug.co.kr")
  mailplugSmtpPassword String?
  mailplugSmtpPort     Int?                           @default(465)
  mailplugSmtpUser     String?
  campaignBlocks       CampaignBlock[]
  emailTemplates       EmailTemplate[]
  emailsReceived       EmailReceived[]
  emailsSent           EmailSent[]
  influencers          Influencer[]
  instagramAccounts    InstagramAccount[]
  surveyConnections    SurveyInfluencerConnection[]
  surveyTemplates      SurveyTemplate[]
  templateAttachments  TemplateAttachment[]
  templateImages       TemplateImage[]
  templateConnections  TemplateInfluencerConnection[]

  @@map("users")
}

model InstagramAccount {
  id                Int      @id @default(autoincrement())
  userId            Int
  instagramUserId   String   @unique
  username          String
  accountType       String?
  profilePictureUrl String?
  accessToken       String
  refreshToken      String?
  tokenExpiresAt    DateTime
  isActive          Boolean  @default(true)
  facebookPageId    String?
  facebookPageName  String?
  followersCount    Int?
  mediaCount        Int?
  biography         String?
  website           String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("instagram_accounts")
}

model InfluencerField {
  id         Int       @id @default(autoincrement())
  key        String    @unique
  label      String
  tooltip    String?
  fieldType  FieldType
  isRequired Boolean   @default(false)
  isFixed    Boolean   @default(false)
  sortOrder  Int       @default(0)
  isActive   Boolean   @default(true)
  options    Json?
  validation Json?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("influencer_fields")
}

model Influencer {
  id                Int                            @id @default(autoincrement())
  userId            Int
  accountId         String
  fieldData         Json
  createdAt         DateTime                       @default(now())
  updatedAt         DateTime                       @updatedAt
  email             String?
  emailsReceived    EmailReceived[]
  emailsSent        EmailSent[]
  user              User                           @relation(fields: [userId], references: [id], onDelete: Cascade)
  surveyConnections SurveyInfluencerConnection[]
  surveyResponses   SurveyResponse[]
  connections       TemplateInfluencerConnection[]

  @@index([userId])
  @@index([accountId])
  @@index([email])
  @@map("influencers")
}

model EmailTemplate {
  id               Int                            @id @default(autoincrement())
  userId           Int
  name             String
  subject          String
  content          String
  variables        Json?
  isActive         Boolean                        @default(true)
  createdAt        DateTime                       @default(now())
  updatedAt        DateTime                       @updatedAt
  conditionalRules Json?
  userVariables    Json?
  surveyTemplateId String?
  surveyTemplate   SurveyTemplate?                @relation(fields: [surveyTemplateId], references: [id])
  user             User                           @relation(fields: [userId], references: [id], onDelete: Cascade)
  emailsSent       EmailSent[]
  attachments      TemplateAttachment[]
  images           TemplateImage[]
  connections      TemplateInfluencerConnection[]

  @@index([userId])
  @@index([surveyTemplateId])
  @@map("email_templates")
}

model TemplateImage {
  id           Int           @id @default(autoincrement())
  templateId   Int
  userId       Int
  filename     String
  originalName String
  supabasePath String
  publicUrl    String
  fileSize     Int
  mimeType     String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  template     EmailTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([templateId])
  @@index([userId])
  @@map("template_images")
}

model TemplateAttachment {
  id           Int           @id @default(autoincrement())
  templateId   Int
  userId       Int
  filename     String
  originalName String
  supabasePath String
  publicUrl    String
  fileSize     Int
  mimeType     String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  template     EmailTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([templateId])
  @@index([userId])
  @@map("template_attachments")
}

model TemplateInfluencerConnection {
  id            Int           @id @default(autoincrement())
  templateId    Int
  influencerId  Int
  userId        Int
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  userVariables Json?
  influencer    Influencer    @relation(fields: [influencerId], references: [id], onDelete: Cascade)
  template      EmailTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([templateId, influencerId])
  @@index([templateId])
  @@index([influencerId])
  @@index([userId])
  @@map("template_influencer_connections")
}

model EmailSent {
  id           Int            @id @default(autoincrement())
  userId       Int
  templateId   Int?
  influencerId Int?
  to           String
  subject      String
  content      String
  messageId    String?
  status       EmailStatus    @default(SENT)
  errorMessage String?
  sentAt       DateTime       @default(now())
  influencer   Influencer?    @relation(fields: [influencerId], references: [id])
  template     EmailTemplate? @relation(fields: [templateId], references: [id])
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([templateId])
  @@index([influencerId])
  @@index([sentAt])
  @@map("emails_sent")
}

model EmailReceived {
  id           Int         @id @default(autoincrement())
  userId       Int
  messageId    String?
  from         String
  to           String
  subject      String
  textContent  String?
  htmlContent  String?
  isRead       Boolean     @default(false)
  isDeleted    Boolean     @default(false)
  attachments  Json?
  headers      Json?
  receivedAt   DateTime    @default(now())
  originalDate DateTime?
  influencerId Int?
  isInfluencer Boolean     @default(false)
  provider     String?
  uniqueId     String?
  influencer   Influencer? @relation(fields: [influencerId], references: [id])
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, uniqueId])
  @@index([userId])
  @@index([from])
  @@index([receivedAt])
  @@index([isRead])
  @@index([isDeleted])
  @@index([provider])
  @@index([influencerId])
  @@index([uniqueId])
  @@map("emails_received")
}

model SurveyTemplate {
  id                String                       @id @default(uuid())
  userId            Int
  title             String
  description       String?
  isActive          Boolean                      @default(true)
  createdAt         DateTime                     @default(now())
  updatedAt         DateTime                     @updatedAt
  blocks            Json?
  questions         Json?
  responses         Int                          @default(0)
  campaignBlocks    CampaignBlock[]
  emailTemplates    EmailTemplate[]
  surveyConnections SurveyInfluencerConnection[]
  surveyResponses   SurveyResponse[]
  user              User                         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("survey_templates")
}

model SurveyResponse {
  id              Int            @id @default(autoincrement())
  influencerId    Int?
  respondentEmail String?
  respondentName  String?
  submittedAt     DateTime       @default(now())
  responses       Json
  templateId      String
  influencer      Influencer?    @relation(fields: [influencerId], references: [id])
  surveyTemplate  SurveyTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@index([templateId])
  @@index([influencerId])
  @@map("survey_responses")
}

model CampaignBlock {
  id              Int             @id @default(autoincrement())
  userId          Int
  title           String
  content         String
  isPublic        Boolean         @default(false)
  isActive        Boolean         @default(true)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  inputConfig     Json?
  inputType       InputType       @default(NONE)
  isRequired      Boolean         @default(false)
  isShared        Boolean         @default(false)
  templateId      String?
  showInDashboard Boolean         @default(false)
  surveyTemplate  SurveyTemplate? @relation(fields: [templateId], references: [id])
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([templateId])
  @@index([isShared])
  @@index([isPublic])
  @@index([inputType])
  @@map("campaign_blocks")
}

model SurveyInfluencerConnection {
  id           Int            @id @default(autoincrement())
  templateId   String
  influencerId Int
  userId       Int
  linkRef      String         @unique
  link         String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  influencer   Influencer     @relation(fields: [influencerId], references: [id], onDelete: Cascade)
  template     SurveyTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([templateId, influencerId])
  @@index([templateId])
  @@index([influencerId])
  @@index([userId])
  @@index([linkRef])
  @@map("survey_influencer_connections")
}

enum EmailStatus {
  SENT
  FAILED
  PENDING
}

enum FieldType {
  TEXT
  LONG_TEXT
  NUMBER
  URL
  EMAIL
  PHONE
  BOOLEAN
  SELECT
  MULTI_SELECT
  TAGS
  DATE
  DATETIME
  CURRENCY
  PERCENTAGE
  RATING
}

enum InputType {
  NONE
  TEXT
  NUMBER
  DATE
  TEXTAREA
  RADIO
  CHECKBOX
  SELECT
  FILE
}
